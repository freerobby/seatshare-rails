<script>
    <% if flash[:notice] %>
    $.growl({ title: "", message: "<%= flash[:notice] %>" });
    <% end %>
    <% if flash[:alert] %>
    $.growl({ title: "Alert", message: "<%= flash[:alert] %>" });
    <% end %>
    <% if flash[:error] %>
    $.growl.error({ title: "Error", message: "<%= flash[:error] %>" });
    <% end %>
</script>