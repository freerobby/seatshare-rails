<% if !flash.empty? %>
<script>
  <% if flash[:notice] %>
  $.growl("<%= flash[:notice] %>", { type: 'success' });
  <% end %>
  <% if flash[:alert] %>
  $.growl("<%= flash[:alert] %>", { type: 'info' });
  <% end %>
  <% if flash[:error] %>
  $.growl("<%= flash[:error] %>", { type: 'danger' });
  <% end %>
</script>
<% end %>