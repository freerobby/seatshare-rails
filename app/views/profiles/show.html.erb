<div class="row">
  <div class="col-md-3">
    <p>
      <%= image_tag @user.gravatar('250x250'), :class => 'img-thumbnail img-responsive', :alt => @user.display_name, :title => @user.display_name %>
    </p>
  </div>
  <div class="col-md-9">
    <% if current_user === @user %>
    <p class="pull-right">
      <%= link_to raw('<span class="glyphicon glyphicon-pencil"></span> Edit Profile'), { :action => 'edit' }, :class => 'btn btn-default' %>
    </p>
    <% end %>
    <h2><%= @user.display_name %></h2>
    <p><small class="text-muted"> <%= @user.profile.location || '<em>No Location Set</em>'.html_safe %> <span class="glyphicon glyphicon-map-marker"></span></small></p>

    <%= simple_format @user.profile.bio, :class => 'lead' %>

    <br />
    <ul class="list-group">
      <li class="list-group-item profile-email"><span class="glyphicon glyphicon-envelope"></span> <%= mail_to @user.email, @user.email %></li>
      <li class="list-group-item profile-joined"><span class="glyphicon glyphicon-user"></span> Joined <%= @user.created_at.strftime('%B %-d, %Y') %></li>
      <li class="list-group-item profile-mobile"><span class="glyphicon glyphicon-phone"></span> <%= number_to_phone @user.profile.mobile || '<em>Not Provided</em>'.html_safe %></li>
    </ul>
  </div>
</div>

<% content_for :page_footer do %>
<script>if (typeof mixpanel != 'undefined') { mixpanel.track("View profile"); }</script>
<% end %>