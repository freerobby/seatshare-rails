<script>
  <% if flash[:notice] %>
  $.bootstrapGrowl("<%= flash[:notice] %>", { type: 'success' });
  <% end %>
  <% if flash[:alert] %>
  $.bootstrapGrowl("<%= flash[:alert] %>", { type: 'info' });
  <% end %>
  <% if flash[:error] %>
  $.bootstrapGrowl("<%= flash[:error] %>", { type: 'danger' });
  <% end %>
</script>