<%= form_for :group, html: {class: "form-horizontal", role: "form"} do |f| %>

<fieldset>
  <legend>Group Details</legend>

  <p class="lead">Groups of users exchange tickets among its membership. You can assign tickets to other users, or request their available tickets.</p> 

  <div class="form-group">
    <%= f.label :group_name, :class => 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.text_field :group_name, :class => 'form-control', :placeholder => 'Cellblock 303' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :entity_id, :class => 'col-md-3 control-label'  %>
    <div class="col-md-9">
      <%= select_tag 'group[entity_id]', grouped_options_for_select(@entities), { :class => 'form-control' } %>
      <p class="help-block"><strong>Choose carefully!</strong> You cannot change your team / venue after the group is created.</p>
    </div>
  </div>

</fieldset>

<div class="row">
  <div class="text-right col-md-12">
    <%= f.submit 'Create Group', :class => 'btn btn-primary' %>
  </div>
</div>

<% end %>

<% content_for :page_footer do %>
<script>if (typeof mixpanel != 'undefined') { mixpanel.track("View new group"); }</script>
<% end %>